<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141414"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/player_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/track_cover"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/img_bg" />

        <TextView
            android:id="@+id/track_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/track_cover"
            android:gravity="center_horizontal"
            android:text="Track Title - ft. Lorenzo Sani"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#CFFFFFFF"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/track_title"
            android:layout_alignParentBottom="false"
            android:layout_toEndOf="@id/track_cover"
            android:orientation="horizontal"
            android:paddingStart="48dp"
            android:paddingTop="8dp"
            android:paddingEnd="48dp">

            <ImageView
                android:id="@+id/track_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_skip_previous" />

            <ImageView
                android:id="@+id/track_play_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_play" />

            <ImageView
                android:id="@+id/track_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_skip_next" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/data_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttons"
        android:layout_below="@id/player_layout"
        android:layout_marginBottom="16dp"
        android:background="@drawable/sharp"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/wave_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_weight="9"
            android:orientation="vertical">

        </LinearLayout>

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:stretchColumns="*">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_attention_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attention"
                    android:textColor="#CFFFFFFF"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_attention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tv_r2r_label"
                    android:gravity="end"
                    android:text="00"
                    android:textColor="#CFFFFFFF"
                    android:textSize="16dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_meditation_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Meditation"
                    android:textColor="#CFFFFFFF"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_meditation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="00"
                    android:textColor="#CFFFFFFF"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_lowalpha_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Low Alpha"
                    android:textColor="#CFFFFFFF"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_lowalpha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="00"
                    android:textColor="#CFFFFFFF"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_highalpha_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="High Alpha"
                    android:textColor="#CFFFFFFF"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_highalpha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="00"
                    android:textColor="#CFFFFFFF"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_lowbeta_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Low Beta"
                    android:textColor="#CFFFFFFF"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_lowbeta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="00"
                    android:textColor="#CFFFFFFF"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_highbeta_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="High Beta"
                    android:textColor="#CFFFFFFF"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_highbeta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="00"
                    android:textColor="#CFFFFFFF"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </TableRow>

        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/btn_bg"
            android:gravity="center_horizontal|center_vertical"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:text="START"
            android:textAlignment="center"
            android:textColor="#ffffffff"
            android:textSize="16dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/btn_bg"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:text="STOP"
            android:textColor="#ffffffff"
            android:textSize="16dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_selectdevice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_bg"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:text="ENABLE MIND-CONTROL"
            android:textColor="#ffffffff"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
